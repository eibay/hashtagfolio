
<div class="hero-profile">
	<div class="hero-inner">
    <a href="" class="hero-avatar"><img src="<%= @user.profile_image_url %>" alt="" /></a>
		<div class="hero-copy">
			<h1><%= @user.display_name %></h1>
			<% if @user.bio %>
				<p class="bio"><%= @user.bio %></p>
			<% end %>
      <div class="stats">
        <ul>
          <li><%= @albums.count %><span>Albums</span></li>
          <li><%= @user.images.count %><span>Images</span></li>
        </ul>
      </div>
		</div>
	</div>
</div>

<% @albums.each do |album| %>

  <div class="album">
    <div class="album-overlay"></div>
    <p class="album-tile-tag"><%= album.tag_list %></p>
    <% if album.cover_id %>
      <%= image_tag album.cover.url %>
    <% else %>
      <img src="https://scontent.cdninstagram.com/hphotos-xaf1/t51.2885-15/e35/11363659_995868700464866_380212249_n.jpg" alt="" />
    <% end %>
  </div>

<% end %>
