<!DOCTYPE html>
<html>
<head>
  <title>#folio</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Lato:300,400' rel='stylesheet' type='text/css'>

  <%= yield :head %>
</head>
<body>

  <header class="navigation" role="banner">
    <div class="navigation-wrapper">
      <a href="<%= root_url %>" class="logo">
        <img src="https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/placeholder_logo_1.png" alt="Logo Image">
      </a>
      <a href="javascript:void(0)" class="navigation-menu-button" id="js-mobile-menu">MENU</a>
      <nav role="navigation">
        <% if logged_in? %>
        <div class="search-bar">
          <%= render 'albums/form' %>
        </div>
        <% end %>
      </nav>
      <div class="navigation-tools">
        <ul id="js-navigation-menu" class="navigation-menu show">
          <% if logged_in? %>
          <li class="nav-link more"><a href="javascript:void(0)"><%= image_tag current_user.profile_image_url, class: "user-avatar" %><%= current_user.display_name %></a>
            <ul class="submenu">
              <li><%= link_to 'Profile', current_user %></li>
              <li><a href="<%= edit_user_path current_user %>">Settings</a></li>
              <li><%= link_to 'Update photos', update_media_path(current_user), method: :patch %></li>
              <li><%= link_to 'Sign out', logout_path, method: :delete %></li>
            </ul>
          </li>
          <% else %>
          <li class="nav-link"><%= link_to 'Sign in', login_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </header>

  <main class="container">

  <% flash.each do |message_type, message| %>
    <div class="flash-<%= message_type %>"><%= message %></div>
  <% end %>


  <%= yield %>

  </main>

  <%= render 'shared/templates' %>
  <%= render 'shared/modal' %>

</body>
</html>
